{
  "name": "@repo/root",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "pnpm exec biome lint --write",
    "fmt": "pnpm exec biome format --write .",
    "check-types": "turbo run check-types",
    "db:generate": "pnpm --filter ./apps/server/ db:generate",
    "db:migrate": "pnpm --filter ./apps/server/ db:migrate"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "@repo/tsconfig": "workspace:*"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.15.1"
}
